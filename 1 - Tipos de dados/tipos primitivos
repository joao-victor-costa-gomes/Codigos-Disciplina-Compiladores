# Inteiro
inteiro = 42
puts inteiro  # Exibe 42
puts inteiro.class  # Exibe "Integer"

# Ponto Flutuante
flutuante = 3.14
puts flutuante  # Exibe 3.14
puts flutuante.class  # Exibe "Float"

# String
texto = "Olá, Ruby!"
puts texto  # Exibe "Olá, Ruby!"
puts texto.class  # Exibe "String"

# Booleanos
verdadeiro = true
falso = false
puts verdadeiro  # Exibe true
puts falso  # Exibe false
puts verdadeiro.class  # Exibe "TrueClass"
puts falso.class  # Exibe "FalseClass"

# Nil (representa ausência de valor)
nada = nil
puts nada  # Exibe ""
puts nada.class  # Exibe "NilClass"
